  # Real evaluator routing and test gating

  CONSTELX_USE_REAL_EVAL=1
  CONSTELX_RUN_PHYSICS_TESTS=1
  CONSTELX_ALLOW_PARALLEL_REAL=1

  # Timeouts/retries for real eval
  CONSTELX_REAL_TIMEOUT_MS=90000
  CONSTELX_REAL_RETRIES=2
  CONSTELX_REAL_BACKOFF=1.5
  CONSTELLARATION_TIMEOUT_MS=90000

  # Avoid BLAS/OpenMP oversubscription (recommended on laptops)

  OMP_NUM_THREADS=1
  VECLIB_MAXIMUM_THREADS=1
  OPENBLAS_NUM_THREADS=1
  NUMEXPR_NUM_THREADS=1

  # macOS NetCDF build-time hints (only needed when building booz_xform)

  # NETCDF_DIR=/opt/homebrew/opt/netcdf

  # LDFLAGS=-L/opt/homebrew/opt/netcdf/lib

  # CPPFLAGS=-I/opt/homebrew/opt/netcdf/include

  # Optional runtime loader hint (rarely needed)

  # DYLD_LIBRARY_PATH=/opt/homebrew/opt/netcdf/lib
